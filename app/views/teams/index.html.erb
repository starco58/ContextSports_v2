<div class="page-header">
  <h1>Teams</h1>
</div>


<p><a href="/teams/new" class="btn btn-primary">Add a New Team</a></p>


<table class="table table-hover">
  <thead>
    <tr>

      <th>Team logo</th>

      <th>City</th>

      <th>Team name</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>

        <td><img src="<%= team.team_logo %>" width="60"></td>

        <td><%= team.city %></td>

        <td><%= team.team_name %></td>

        <div>
          <form action="/players/new" class="form-horizontal">
              <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Add to Favorites" class="btn btn-warning">
          </form>
        </div>
        <td>
          <a href="/players/new" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_team/<%= team.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

