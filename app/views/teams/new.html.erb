<div class="page-header">
  <h1>Add Team</h1>
</div>

<% if @team.errors.any? %>
  <% @team.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_team" class="form-horizontal">

  <!-- Label and input for city -->
  <div class="form-group">

    <label for="city" class="col-sm-2 control-label">
      City
    </label>
    <div class="col-sm-10">

      <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @team.city %>">

    </div>

  </div>


  <!-- Label and input for team_name -->
  <div class="form-group">

    <label for="team_name" class="col-sm-2 control-label">
      Team name
    </label>
    <div class="col-sm-10">

      <input type="text" id="team_name" name="team_name" placeholder="Team name" class="form-control" value="<%= @team.team_name %>">

    </div>

  </div>


  <!-- Label and input for team_logo -->
  <div class="form-group">

    <label for="team_logo" class="col-sm-2 control-label">
      Team logo
    </label>
    <div class="col-sm-10">

      <input type="text" id="team_logo" name="team_logo" placeholder="Team logo" class="form-control" value="<%= @team.team_logo %>">

    </div>

  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Team" class="btn btn-primary">
    </div>
  </div>
</form>
