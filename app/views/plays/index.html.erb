<div class="page-header">
  <h1>Plays</h1>
</div>



<table class="table table-hover">
  <thead>
    <tr>

      <th>Event</th>

      <th>Player</th>

      <th>Play type</th>

      <th>Quarter play occured</th>

      <th>Add Play Response</th>

    </tr>
  </thead>

  <tbody>
    <% @plays.each do |play| %>
      <tr>

        <td><%= play.event_id %></td>

        <td><%= play.player_id %></td>

        <td><%= play.play_type %></td>

        <td><%= play.quarter_play_occured %></td>



        <td>
          <a href="/play_responses/new/<%= play.id %>" class="btn btn-success">
            <i class="fa fa-plus"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><a href="/plays/new" class="btn btn-primary">Add a New Play</a></p>
