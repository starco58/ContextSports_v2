<div class="page-header">
  <h1>Edit Play #<%= @play.id %></h1>
</div>

<% if @play.errors.any? %>
  <% @play.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_play/<%= @play.id %>" class="form-horizontal">

  <!-- Label and input for event_id -->
  <div class="form-group">

    <label for="event_id" class="col-sm-2 control-label">
      Event
    </label>
    <div class="col-sm-10">

      <input type="text" id="event_id" name="event_id" placeholder="Event" class="form-control" value="<%= @play.event_id %>">

    </div>

  </div>


  <!-- Label and input for player_id -->
  <div class="form-group">

    <label for="player_id" class="col-sm-2 control-label">
      Player
    </label>
    <div class="col-sm-10">

      <input type="text" id="player_id" name="player_id" placeholder="Player" class="form-control" value="<%= @play.player_id %>">

    </div>

  </div>


  <!-- Label and input for play_type -->
  <div class="form-group">

    <label for="play_type" class="col-sm-2 control-label">
      Play type
    </label>
    <div class="col-sm-10">

      <input type="text" id="play_type" name="play_type" placeholder="Play type" class="form-control" value="<%= @play.play_type %>">

    </div>

  </div>


  <!-- Label and input for quarter_play_occured -->
  <div class="form-group">

    <label for="quarter_play_occured" class="col-sm-2 control-label">
      Quarter play occured
    </label>
    <div class="col-sm-10">

      <input type="text" id="quarter_play_occured" name="quarter_play_occured" placeholder="Quarter play occured" class="form-control" value="<%= @play.quarter_play_occured %>">

    </div>

  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Play" class="btn btn-primary">
    </div>
  </div>
</form>
