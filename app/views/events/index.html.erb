<div class="page-header">
  <h1>Events</h1>
</div>


<p><a href="/events/new" class="btn btn-primary">Add a New Event</a></p>


<table class="table table-hover">
  <thead>
    <tr>

      <th>Sport</th>

      <th>Date</th>

      <th>Game time</th>

      <th>Home team</th>

      <th>Away team</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>

        <td><%= event.game %></td>

        <td><%= event.date.strftime("%b %e, %Y") %></td>

        <td><%= event.game_time.strftime("%l:%M%p EST")  %></td>

        <td><%= event.home_team %></td>

        <td><%= event.away_team %></td>


        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/events/<%= event.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

