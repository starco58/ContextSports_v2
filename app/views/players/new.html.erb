<div class="page-header">
  <h1>Add Player</h1>
</div>

<% if @player.errors.any? %>
  <% @player.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_player" class="form-horizontal">

  <!-- Label and input for player_name -->
  <div class="form-group">

    <label for="player_name" class="col-sm-2 control-label">
      Player name
    </label>
    <div class="col-sm-10">

      <input type="text" id="player_name" name="player_name" placeholder="Player name" class="form-control" value="<%= @player.player_name %>">

    </div>

  </div>


  <!-- Label and input for player_team -->
  <div class="form-group">

    <label for="player_team" class="col-sm-2 control-label">
      Player team
    </label>
    <div class="col-sm-10">

      <input type="text" id="player_team" name="player_team" placeholder="Player team" class="form-control" value="<%= @player.player_team %>">

    </div>

  </div>


  <!-- Label and input for player_image -->
  <div class="form-group">

    <label for="player_image" class="col-sm-2 control-label">
      Player image
    </label>
    <div class="col-sm-10">

      <input type="text" id="player_image" name="player_image" placeholder="Player image" class="form-control" value="<%= @player.player_image %>">

    </div>

  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Player" class="btn btn-primary">
    </div>
  </div>
</form>
