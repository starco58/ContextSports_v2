<div class="page-header">
  <h1>Player Stats</h1>
</div>

<dl class="dl-horizontal">

  <dt>Player name</dt>
  <dd><%= @player.player_name %></dd>

  <dt></dt>
  <dd><img src="<%= @player.player_image %>" width="360"></dd>

</dl>

<div>
  <dl class="dl-horizontal">
    <% @turnovers.each do |play| %>
        <dt>Play Type</dt>
        <dd><%= play.play_type %></dd>

        <dt>Event Details</dt>
        <dd>
            <%= play.event.game_time.strftime("%l:%M%p EST") %>
            <%= play.event.date.strftime("%b %e, %Y") %>
        </dd>

        <dt>Play Details</dt>
        <dt><% play.play_responses.each do |play_response| %></dt>
          <dd><%= play_response.play_id %> </dd>
          <dd> <%= play_response.player_responible %> </dd>
          <dd> <%= play_response.comment %> </dd>

      <% end %>

    <% end %>
  </dl>

    <dl class="dl-horizontal">
      <% @touchdowns.each do |play| %>
          <dt>Play Type</dt>
          <dd><%= play.play_type %></dd>

          <dt>Event Details</dt>
          <dd>
            <%= play.event.game_time.strftime("%l:%M%p EST") %>
            <%= play.event.date.strftime("%b %e, %Y") %>
          </dd>
          <dt>Play Details</dt>
          <dt><% play.play_responses.each do |play_response| %></dt>
              <dd> <%= play_response.play_id %> </dd>
              <dd> <%= play_response.player_responible %> </dd>
              <dd> <%= play_response.comment %> </dd>

      <% end %>

    <% end %>
  </dl>
