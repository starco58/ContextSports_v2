<div class="page-header">
  <h1>Players</h1>
</div>


<p><a href="/players/new" class="btn btn-primary">Add a New Player</a></p>


<table class="table table-hover">
  <thead>
    <tr>

      <th></th>

      <th>Player name</th>

      <th>Player team</th>

      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>

        <td><img src="<%= player.player_image %>" width="60"></td>

        <td><%= player.player_name %></td>

        <td><%= player.player_team %></td>

        <td>
          <a href="/players/<%= player.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/players/<%= player.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_player/<%= player.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

